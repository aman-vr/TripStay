@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1">
<link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
<link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Montserrat">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<style>
body, h1,h2,h3,h4,h5,h6 {font-family: "Montserrat", sans-serif}
.w3-row-padding img {margin-bottom: 12px}
/* Set the width of the sidebar to 120px */
.w3-sidebar {width: 120px;background: #222;}
/* Add a left margin to the "page content" that matches the width of the sidebar (120px) */
#main {margin-left: 120px}
/* Remove margins from "page content" on small screens */
</style>
<body class="w3-black">
    <!-- Page Content -->
    <div class="w3-padding-large" id="main">
        <!-- Header/Home -->
        <header class="w3-container w3-padding-32 w3-center" id="home">
            <h1 class="w3-jumbo"><span class="w3-hide-small">Welcome To </span> TripStay</h1>
            <p>Your home away from home.</p>
            <img src="/images/header-pic.jpg" alt="boy" class="w3-image" width="992" height="1108">
        </header>

        <!-- About Section -->
        <div class="w3-content w3-justify w3-text-grey w3-padding-64" id="about">
            <h2 class="w3-text-light-grey">About Us</h2>
            <hr style="width:200px" class="w3-opacity">
            <p>
               With the world of digitalisation taking on, TripStay intends to reduce the client's effort and make it more comfortable 
                for people to book a room online and enjoy our facilities. We promise to serve you to the best of our abilities and
                make your stay with us memorable for you.
            </p>
            <h3 class="w3-padding-16 w3-text-light-grey">Our Speciality</h3>
            <p class="w3-wide">Food</p>
            <div class="w3-white">
                <div class="w3-dark-grey" style="height:28px;width:90%"></div>
            </div>
            <p class="w3-wide">Comfort</p>
            <div class="w3-white">
                <div class="w3-dark-grey" style="height:28px;width:95%"></div>
            </div>
            <p class="w3-wide">Service</p>
            <div class="w3-white">
                <div class="w3-dark-grey" style="height:28px;width:90%"></div>
            </div><br>

            <div class="w3-row w3-center w3-padding-16 w3-section w3-light-grey">
                <div class="w3-quarter w3-section">
                    <span class="w3-xlarge">100+</span><br>
                    Rooms
                </div>
                <div class="w3-quarter w3-section">
                    <span class="w3-xlarge">200+</span><br>
                    Staff
                </div>
                <div class="w3-quarter w3-section">
                    <span class="w3-xlarge">1500+</span><br>
                    Happy Clients
                </div>
                <div class="w3-quarter w3-section">
                    <span class="w3-xlarge">5+</span><br>
                    Years of Service
                </div>
            </div>

            <h3 class="w3-padding-16 w3-text-light-grey">Rooms we offer:</h3>
            <div class="w3-row-padding" style="margin:0 -16px">
                <div class="w3-half w3-margin-bottom">
                    <ul class="w3-ul w3-white w3-center w3-opacity w3-hover-opacity-off">
                        <li class="w3-dark-grey w3-xlarge w3-padding-32">Pocket-Friendly</li>
                        <li class="w3-padding-16">Single King and Double Queen</li>
                        <li class="w3-padding-16">Air conditioned rooms</li>
                        <li class="w3-padding-16">Sanitised before stay</li>
                        <li class="w3-padding-16">TV and Geyser</li>
                        <li class="w3-padding-16">
                            <h2>$ 1000 and $ 1800</h2>
                            <span class="w3-opacity">per day</span>
                        </li>
                        <li class="w3-light-grey w3-padding-24">
                            <a asp-controller="Guest" asp-action="Create"><button class="w3-button w3-white w3-padding-large w3-hover-black" asp-controller="Guest" asp-action="Create">Book</button></a>
</li>
                    </ul>
                </div>

                <div class="w3-half">
                    <ul class="w3-ul w3-white w3-center w3-opacity w3-hover-opacity-off">
                        <li class="w3-dark-grey w3-xlarge w3-padding-32">Premium</li>
                        <li class="w3-padding-16">Executive Suite</li>
                        <li class="w3-padding-16">Fully AC</li>
                        <li class="w3-padding-16">Unlimited WiFi</li>
                        <li class="w3-padding-16">Complimentary Breakfast</li>
                        <li class="w3-padding-16">
                            <h2>$ 2500 </h2>
                            <span class="w3-opacity">per day</span>
                        </li>
                        <li class="w3-light-grey w3-padding-24">
                            <a asp-controller="Guest" asp-action="Create"><button class="w3-button w3-white w3-padding-large w3-hover-black">Book</button></a>
                        </li>
                    </ul>
                </div>
            </div>

            <!-- Testimonials -->
            <h3 class="w3-padding-24 w3-text-light-grey">Guest Reviews</h3>
            <p><span class="w3-large w3-margin-right">Raghav Malhotra.</span> CEO at CRICshick.</p>
            <p>TripStay is a quality brand. Offers more than it claims.</p><br>

            <p><span class="w3-large w3-margin-right">Amisha Patel.</span> Actor.</p>
            <p>Lovely place to get back in touch with yourself. Absolutely Recommended.</p>
        </div>
        <!-- Contact Section -->
        <div class="w3-padding-64 w3-content w3-text-grey" id="contact">
            <h2 class="w3-text-light-grey">Contact Us</h2>
            <hr style="width:200px" class="w3-opacity">

            <div class="w3-section">
                <p><i class="fa fa-map-marker fa-fw w3-text-white w3-xxlarge w3-margin-right"></i> Viktor V, Delhi</p>
                <p><i class="fa fa-phone fa-fw w3-text-white w3-xxlarge w3-margin-right"></i> Phone: +00 151515</p>
                <p><i class="fa fa-envelope fa-fw w3-text-white w3-xxlarge w3-margin-right"> </i> Email: tripstay@gmail.com</p>
            </div><br>
        </div>

        <!-- Footer -->
        <footer class="w3-content w3-padding-64 w3-text-grey w3-xlarge">
            <i class="fa fa-facebook-official w3-hover-opacity"></i>
            <i class="fa fa-instagram w3-hover-opacity"></i>
            <i class="fa fa-snapchat w3-hover-opacity"></i>
            <i class="fa fa-pinterest-p w3-hover-opacity"></i>
            <i class="fa fa-twitter w3-hover-opacity"></i>
            <i class="fa fa-linkedin w3-hover-opacity"></i>
            <p class="w3-medium">@DateTime.UtcNow.Year - TripStay - <a asp-area="" asp-controller="Home" asp-action="Privacy" class="w3-hover-text-green">Privacy</a></p>
        </footer>

    </div>

</body>
</html>

