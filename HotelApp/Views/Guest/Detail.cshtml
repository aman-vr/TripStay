@model GuestDetailViewModel
@{
    ViewBag.Title = "Booking Details";
}

<div class="col-md-12 grid-margin grid-margin-md-0">
    <div class="card">
        <div class="card-body">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index"> Home </a></li>
                    <li class="breadcrumb-item"><a asp-action="Index"> All Bookings </a></li>
                    <li class="breadcrumb-item active" aria-current="page">Booking Details</li>
                </ol>
            </nav> <br /><br />
            <div class="wrap d-flex justify-content-start flex-wrap">
                <div class="wrap align-items-center ml-5">
                    <p class="font-weight-bold text-success" style="font-size:20px">@Model.FirstName @Model.LastName</p>

                    <p class="font-weight-normal"> Email:<a href="#"> @Model.Email</a> </p>
                    <p class="font-weight-normal"> Phone:<a href="tel:@Model.MobileNo">@Model.MobileNo</a></p>
                    <p class="font-weight-normal"> Address: @Model.Address   </p>



                    <br /><br />
                    <p class="font-weight-bold"> Room Details </p>
                    <hr style="background-color:crimson" />
                    <p class="font-weight-normal"> Room Type: @Model.RoomType </p>
                    <p class="font-weight-normal"> Arrival Date: @Model.FromDate.ToString("dd-MMM-yyyy") </p>
                    <p class="font-weight-normal"> Departure Date: @Model.ToDate.ToString("dd-MMM-yyyy") </p>
                    <p class="font-weight-normal"> Total Charges: @Math.Round(Model.TotalCharges, 2) </p>
                    <p class="font-weight-normal"> <i class="fas fa-envelope" style="margin-right:0.6em; color:cornflowerblue"></i><a href="mailto:@Model.Email?subject=Booking&body=Attached within is your booking receipt.">Send Booking Receipt</a></p>
                    <br /><br />
                </div>


            </div>
        </div>
    </div>
</div>

@section Scripts{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}